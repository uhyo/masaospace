<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title><%= @metadata.title %></title>
    <style>
      html, body, p {
        margin: 0;
        padding: 0;
        font-size: 14px;
      }
      #wrapper {
        width: 512px;
        border-left: 1px solid #aaaaaa;
        border-right: 1px solid #aaaaaa;
      }
      #game, #info1, #info2 {
        width: 512px;
        text-align: center;
      }
      #game {
        height: 356px;
        overflow-y: hidden;
      }
      #info1, #info2 {
        height: 36px;
        border-top: 1px solid #aaaaaa;
        border-bottom: 1px solid #aaaaaa;
      }
      #info1 {
        font-weight: bold;
        color: #444444;
      }
      #l {
        float: left;
      }
      a:link, a:visited {
        color: #666666;
      }
      p {
        line-height: 36px;
      }
    </style>
    <script type="text/javascript" src="/static/CanvasMasao.min.js"></script>
  </head>
  <body>
    <div id="wrapper">
      <div id="info1">
        <p>「<%= @metadata.title %>」</p>
      </div>
      <div id="game"></div>
      <div id="info2">
        <div>
          <a id="l" href="<%= @config.service.url %>" target="_parent">
            <img src="/static/images/logo.png" width="160" height="36" alt="<%= @config.service.name %>">
          </a>
        </div>
        <div>
          <p><a href="<%= @config.service.url %>play/<%- @metadata.id %>" target="_parent">この正男を<%= @config.service.name %>でプレイする</a></p>
        </div>
      </div>
    </div>
    <script>
      new <%- @constructorName %>.Game(<%- JSON.stringify(@params) %>,"game");
    </script>
  </body>
</html>

