<meta name="twitter:card" content="summary">
<meta name="twitter:title" value="<%= @title %>">
<% if @social.image : %>
<meta name="twitter:image" value="<%= @social.image %>">
<% else : %>
<meta name="twitter:image" value="/icon-with-logo.png">
<% end %>
<% if @social.description : %>
<meta name="twitter:description" value="<%= @social.description %>">
<% end %>
