<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="robots" content="noindex">
    <title><%= @metadata.title %></title>
    <style>
      html, body, p {
        margin: 0;
        padding: 0;
        font-size: 14px;
      }
      html {
        overflow: hidden;
      }
      #game {
        width: 512px;
        height: 320px;
        overflow-y: hidden;
      }
    </style>
    <script type="text/javascript" src="//<%= @config.service.domain %>/static/CanvasMasao.min.js"></script>
  </head>
  <body>
    <div id="game"></div>
    <script>
      new <%- @constructorName %>.Game(<%- JSON.stringify(@params) %>,"game");
    </script>
  </body>
</html>


