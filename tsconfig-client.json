{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "alwaysStrict": true,
    "importHelpers": true,
    "jsx": "React",
    "module": "es2015",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": true,
    "target": "es5",
    "outDir": "dist-client/"
  },
  "include": ["client/**/*.ts", "client/**/*.tsx"]
}
