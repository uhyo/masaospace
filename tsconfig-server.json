{
  "compilerOptions": {
    "lib": ["dom", "es2019"],
    "alwaysStrict": true,
    "jsx": "React",
    "module": "commonjs",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": true,
    "target": "es2019",
    "outDir": "dist-server/"
  },
  "include": ["src/**/*.ts"]
}
